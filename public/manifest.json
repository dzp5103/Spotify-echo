        {
          "src": "/assets/icons/chat-shortcut.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Analytics Dashboard",
      "short_name": "Analytics", 
      "description": "View music analytics and insights",
      "url": "/analytics",
      "icons": [
        {
          "src": "/assets/icons/analytics-shortcut.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Settings",
      "short_name": "Settings",
