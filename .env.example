# EchoTune AI Environment Configuration
# Copy this file to .env and fill in your actual values

# Spotify API Configuration (Required for full functionality)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:3000/auth/callback

# Production Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# LLM Provider Configuration (Optional - Mock provider will be used if none configured)
# OPENAI_API_KEY=your_openai_api_key_here
# GEMINI_API_KEY=your_gemini_api_key_here
# AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT=your_deployment_name
# OPENROUTER_API_KEY=your_openrouter_api_key_here

# Default LLM Provider (mock, openai, gemini, azure, openrouter)
DEFAULT_LLM_PROVIDER=mock
DEFAULT_LLM_MODEL=mock-music-assistant

# Database Configuration
# Choose one or more database platforms:

# MongoDB (recommended for ML/Analytics)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DATABASE=spotify_analytics
MONGODB_COLLECTION=listening_history

# Supabase (PostgreSQL - recommended for applications)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
DATABASE_URL=postgresql://username:password@db.your-project.supabase.co:5432/postgres

# Digital Ocean Databases (optional)
DO_DATABASE_URL=postgresql://username:password@db-cluster.db.ondigitalocean.com:25060/defaultdb?sslmode=require

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# MCP Server Configuration (Optional)
MCP_SERVER_PORT=3001

# Browserbase Configuration (for browser automation testing)
BROWSERBASE_API_KEY=your_browserbase_api_key_here
BROWSERBASE_PROJECT_ID=your_browserbase_project_id_here
BROWSERBASE_SESSION_ID=your_browserbase_session_id_here

# MCP Server Configuration
MCP_SEQUENTIAL_THINKING_ENABLED=true
MCP_SCREENSHOT_WEBSITE_ENABLED=true
MCP_BROWSERBASE_ENABLED=false
MCP_FILESYSTEM_ENABLED=true